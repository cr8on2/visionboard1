<h1>Listing pictures</h1>

<table>
  <tr>
    <th>Img</th>
    <th>Caption</th>
    <th>Category</th>
    <th>User</th>
    <th>Slideshow</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.img %></td>
    <td><%= picture.caption %></td>
    <td><%= picture.category %></td>
    <td><%= picture.user_id %></td>
    <td><%= picture.slideshow_id %></td>
    <td><%= link_to 'Show', picture %></td>
    <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
    <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

